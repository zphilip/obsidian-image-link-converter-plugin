{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "esModuleInterop": true,
      "jsx": "react",
      "inlineSourceMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*", "node_modules/*"]
      },
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }